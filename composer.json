{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "lavary/laravel-menu": "dev-master",
        "barryvdh/laravel-ide-helper": "dev-master",
        "hisorange/browser-detect": "2.*",
        "liebig/cron": "dev-master",
        "maveius/liphte": "dev-master",
        "laravelcollective/annotations": "5.1.*",
        "laravel-doctrine/orm": "1.0.*",
        "laravel-doctrine/migrations": "1.0.*",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Solvre\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan route:scan",
            "php artisan doctrine:migrations:diff",
            "php artisan doctrine:migrations:migrate",
            "mkdir -p storage/framework/cache storage/framework/sessions storage/framework/views",
            "mkdir -p bootstrap/cache",
            "mkdir -p storage/proxies",
            "mkdir -p storage/app",
            "mkdir -p storage/logs",
            "chmod 777 -R storage",
            "chmod 777 -R bootstrap/cache"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled",
            "php artisan route:scan",
            "php artisan doctrine:migrations:diff",
            "php artisan doctrine:migrations:migrate"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "annotation-commands": [
            "php artisan event:scan",
            "php artisan route:scan",
            "php artisan model:scan"
        ],
        "ide-helper-commands": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models",
            "php artisan ide-helper:meta"
        ],
        "doctrine-commands": [
            "php artisan doctrine:migrations:diff",
            "php artisan doctrine:migrations:migrate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
